{{>managehead}}

<body>
    {{>userheader}}
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" style="position: fixed;">
            <div class="p-4">
                <a href="#" class="img logo rounded-circle mb-5"
                    style="background-image: url(/admin/images/dp.jpg);"></a>
                <ul class="list-unstyled components mb-5">
                    <li>
                        <a href="/userprofile">Profile Information</a>
                    </li>
                    <li>
                        <a href="/orders">My Orders</a>
                    </li>
                    <li>
                        <a href="/manageaddress">Manage Address</a>
                    </li>
                    <li>
                        <a href="/userwishlist">My Wishless</a>
                    </li>
                    <li>
                        <a href="/usercoupons">My Coupons</a>
                    </li>
                    <li>
                        <a href="/wallet">My Wallet & Referrals</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <main id="main" class="main">
        <div class="card bg-warning" style="border-radius: 15px; ">
            <div class="card-body text-center">
                <h3 style="font-weight:500 ;">Wallet & Referrals</h3>
            </div>

        </div>
        <div class="row">
            <div class="col-sm-6 mt-5">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-head text-center"
                        style="background-color: rgb(255, 234, 47); border-radius: 10px;">
                        <h3 style="font-weight: 500;">My Wallet</h3>
                    </div>
                    <div class="card-body">
                        <h4>Current Wallet Balance : </h4>
                        <h5 style="color: red; font-weight:500 ;">Rs {{Amount}} /-</h5>
                    </div>
                </div>
            </div>
            <div class="col-sm" style="margin-top: -70px; margin-left: 130px;">
                <div class="card text-center"
                    style="background-color:azure; margin-top:-80px ; margin-left: 500px; width:300px; height: auto; border-radius: 10px; border-width: 1px; border-color: red;">
                    <h4 style="font-weight: 500;">YOUR REFERRAL CODE</h4>
                    <p class="text-danger mt-3" style="font-size: 20px;"><b>{{user.Referral_Code}}</b></p>
                    <p class="mt-3">Share this referral code to friends to avail exciting benefits</p>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12">
            <table class="table mt-5 text-center">
            <thead>
                <th>Details</th>
                <th>Date</th>
                <th>Credited Amount</th>
            </thead>
            <tbody>
            {{#each history}}
            <tr>
                <td>{{this.Name}}</td>
                <td>{{this.Date_Joined}}</td>
                <td style="color: green;">+{{this.credited}}</td>
            </tr>
            {{/each}}
            </tbody>
        </table>
        </div>


    </main>

    <script src="/user/js/jquery.min.js"></script>
    <script src="/user/js/popper.js"></script>
    <script src="/user/js/bootstrap.min.js"></script>
    <script src="/user/js/main.js"></script>
    {{>userjs}}
</body>