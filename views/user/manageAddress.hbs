<body>
    {{>userheader}}
    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar" style="position: fixed;">
            <div class="p-4">
                <a href="#" class="img logo rounded-circle mb-5"
                    style="background-image: url(https://m.media-amazon.com/images/I/41jLBhDISxL.jpg);"></a>
                <ul class="list-unstyled components mb-5">
                    <li>
                        <a href="/userprofile">Profile Information</a>
                    </li>
                    <li>
                        <a href="/orders">My Orders</a>
                    </li>
                    <li>
                        <a href="/manageaddress">Manage Address</a>
                    </li>
                    <li>
                        <a href="/userwishlist">My Wishlist</a>
                    </li>
                    
                    <li>
                        <a href="/wallet">My Wallet & Referrals</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <main id="main" class="main">
        <div id="contnt" class="p-4 text-center">
            <h3>Manage Address</h3>
            <div class="card">
                {{!-- <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample"
                    aria-expanded="false" aria-controls="collapseExample">Add New Address</button> --}}
                    <button class="btn btn-primary" type="button" onclick="trig()">Add New Address</button>
                <div class="collapse text-centre" id="addressmpodal">
                    <div class="card-body" >
                        <form action="/manageaddress" class="checkout__form" method="post">
                            <div class="row" style="margin-left:160px ;">
                                <div class="col-lg-12">
                                    <div class="row">
                                        <div class="col-lg-8 col-md-8 col-sm-8">
                                            <div class="checkout__form__input">
                                                <p>Customer Name</p>
                                                <input type="text" name="Name">
                                            </div>
                                            <div class="checkout__form__input">
                                                <p>Address</p>
                                                <input type="text" name="Address">
                                            </div>
                                            <div class="checkout__form__input">
                                                <p>City</p>
                                                <input type="text" name="City">
                                            </div>
                                            <div class="checkout__form__input">
                                                <p>State</p>
                                                <input type="text" name="State">
                                            </div>
                                            <div class="checkout__form__input">
                                                <p>Pincode</p>
                                                <input type="text" name="Pin">
                                            </div>
                                            <div class="checkout__form__input">
                                                <p>Phone</p>
                                                <input type="text" name="Phone">
                                            </div>
                                            <div class="checkout__form__input">
                                                <p>Email</p>
                                                <input type="text" name="Email">
                                                <input type="text" name="userId" value="{{user._id}}" hidden>
                                            </div>
                                            <div>
                                                <button class="btn btn-danger" type="submit">Submit</button>
                                            </div>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{#each address}}
            <div class="card mt-4">

                <div class="card-body text-left">
                    <a href="/delete_address?phn={{this._id}}" style="float:right ; color: rgb(255, 0, 0);"><span
                            class="icon_trash mr-4 mt-3"></span></a>
                    <a href="" style="float:right ; color: rgb(0, 0, 0);"><span
                            class="icon_pencil mr-4 mt-3"></span></a>

                    <p>{{this.Name}}</p>
                    <p>{{this.Address}}</p>
                    <p>{{this.City}}</p>
                    <p>{{this.Pin}}</p>
                    <p>{{this.Mobile}}</p>
                </div>
            </div>
            {{/each}}
    </main>

    <!-- Page Content  -->


    <script src="/user/js/jquery.min.js"></script>
    <script src="/user/js/popper.js"></script>
    <script src="/user/js/bootstrap.min.js"></script>
    <script src="/user/js/main.js"></script>
